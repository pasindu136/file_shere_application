{
  "name": "orbit-share",
  "version": "1.0.0",
  "description": "High-speed Local File Transfer & Remote Control Tool",
  "main": "main.js",
  "author": "Pasindu Sandamal",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.pasindu.orbitshare",
    "productName": "Orbit Share",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "views/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Orbit Share"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/electron-builder/**/*"
    ]
  },
  "dependencies": {
    "archiver": "^7.0.0",
    "check-disk-space": "^3.4.0",
    "express": "^4.18.2",
    "ip": "^1.1.8",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^24.9.1"
  }
}